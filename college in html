<script>
$(document).ready(function(){
    $(".building").click(function(){
        let title = $(this).data("title");
        let info = $(this).data("info");

        $(".modal-title").text(title);
        $(".modal-body").text(info);

        new bootstrap.Modal(document.getElementById('buildingModal')).show();
    });
});
